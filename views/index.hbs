<h1>Eat-Da-Burger!</h1>

<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-offset-4 col-md-4">
			<img src="assets/images/burger.png" alt="BURGER">
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 col-md-5">
			<ul>
				{{#each burgers}} {{#unless this.devour}}
				<li>
					{{this.burger_name}}

					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devour" value="true">
						<button type="submit">Devour!</button>
					</form>
				</li>
				{{/unless}} {{/each}}
			</ul>
		</div>
		<div class="col-md-2"></div>
		<div class="col-xs-12 col-md-5">
			<ul>
				{{#each burgers}} {{#if this.devour}}
				<li>
					{{this.burger_name}}

				</li>
				{{/if}} {{/each}}
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 col-md-offset-3 col-md-6">
			<form action="/">
				<div class="form-group">
					{{!-- <label for="exampleInputEmail1">Email address</label> --}}
					<input type="text" class="form-control" id="newBurgerInput" placeholder="Enter the name of a new burger you want to eat...">
				</div>
				<button type="submit" class="btn btn-primary">ADD</button>
			</form>
		</div>
	</div>
</div>
</div>


