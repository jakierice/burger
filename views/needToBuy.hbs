<div id="needToBuy">
	<div class="small-12 cell" id="needToBuyTitle">
		<h1>Need to Buy</h1>
	</div>
	{{#each flavors}} {{#unless this.tasted}} {{#unless this.personal_stock}}
	<div class="grid-x grid-padding-x">
		<div class="small-10 medium-6 cell">
			{{this.flavor_name}}
		</div>
		<div class="small-10 medium-3 cell">
			{{this.retailer_name}}
		</div>
		<div class="small-12 medium-3 cell">
			<form action="/personal_stock/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="personalStock" value="true">
				<button type="submit" class="button">Got it!</button>
			</form>
		</div>
	</div>
	{{/unless}} {{/unless}} {{/each}}
</div>